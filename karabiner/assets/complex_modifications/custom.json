{
  "title": "ctrl + space to backSpace",
  "rules": [
    {
      "description": "ctrl + space to backSpace",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["caps_lock", "option"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    },
    {
      "description": "(s,o,command) to right option",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_option"
          },
          "to": [
            {
              "key_code": "left_command",
              "modifiers": ["left_shift", "left_option"]
            }
          ]
        }
      ]
    }
  ]
}
